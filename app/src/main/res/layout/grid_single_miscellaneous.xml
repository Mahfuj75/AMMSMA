<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_customGrid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:theme="@style/CardViewStyle"
    card_view:cardUseCompatPadding="true"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:contentPaddingBottom="16dp"
    card_view:cardBackgroundColor="#F5F5F5"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/grid_image"
            android:src="@drawable/app_logo_icon"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageView>

        <TextView
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:textColor="@color/textColorForTextViewOne"
            android:id="@+id/grid_text"
            android:text="Grid Text"
            android:minLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="17sp"/>

    </LinearLayout>



</android.support.v7.widget.CardView>