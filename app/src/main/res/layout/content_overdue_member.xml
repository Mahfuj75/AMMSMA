<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.insideLogin.insideHome.OverdueMemberActivity"
    tools:showIn="@layout/activity_overdue_member">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/loan_officer" />
        <TextView
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:id="@+id/textView_programOfficerName"
            android:textSize="15sp"
            android:lines="1"
            android:layout_marginStart="10dp"
            android:fontFamily="serif"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"/>
        <View
            android:layout_width="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="30dp"/>

        <TextView
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:id="@+id/textView_groupName"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            android:fontFamily="serif"
            android:lines="1"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Group Name"
            android:textColor="@color/colorPrimaryDark" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="7dp"
            android:src="@drawable/group" />


    </LinearLayout>
    <Spinner
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/spinnerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:popupBackground="@android:color/transparent"
        android:paddingBottom="10dp"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height=".8dp"/>
    <com.evrencoskun.tableview.TableView
        android:id="@+id/tableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>