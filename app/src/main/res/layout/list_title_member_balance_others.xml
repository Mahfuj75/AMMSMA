            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlueGray" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:gravity="center"
            android:lines="2"
            android:text="Primary Overdue"
            android:textColor="@color/colorSimpleBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlueGray" />

        <TextView

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:gravity="center"
            android:lines="2"
            android:text="Secondary Disbursed"
            android:textColor="@color/colorSimpleBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlueGray" />

        <TextView

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:gravity="center"
            android:lines="2"
            android:text="Secondary Overdue"
            android:textColor="@color/colorSimpleBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlueGray" />

        <TextView

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:gravity="center"
            android:lines="2"
            android:text="Secondary Outstanding"
            android:textColor="@color/colorSimpleBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlueGray" />

